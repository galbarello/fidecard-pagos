<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div id="header">
        <%= image_tag "encabezado_1.jpg" %>
        <% if logged_in? %>
         Bienvenido <%= current_user.username %>.
           <%= link_to "Ver Perfil", edit_current_user_path %> or
    <%= link_to "Salir", logout_path %>
   <% else %>
     <%= link_to "Crear Usuario", signup_path %> or
     <%= link_to "Ingresar", login_path %>.
   <% end %>

      </div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}",:class => "ui-body ui-body-e" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
